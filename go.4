#!/bin/sh
#
#  Bring up 4 games tiled, redirecting stdout and stderr of each.
#
make
(cd; xrdb -load .xresources)
xrdb -merge XBlackjack.ad
xblackjack -geometry 520x400+50+20	>1.log 2>&1 &
sleep 1
xblackjack -geometry 520x400+600+20	>2.log 2>&1 &
sleep 1
xblackjack -geometry 520x400+50+470  	>3.log 2>&1 &
sleep 1
xblackjack -geometry 520x400+600+470	>4.log 2>&1 &
